<%= form_for @contact, html: {role: "form"} do |f| %>
  <div class="form-group">
    <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert" id="error_explanation">
      <%= pluralize(@contact.errors.count, "error") %> prohibited
        this contact from being saved:
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <%= f.text_field :title, :class => "form-control", :placeholder => "Enter a title" %>
  </div>
 
  <div class="form-group">
    <%= f.label :link, :class => "col-sm-2 control-label" %>
    <%= f.text_area :link, :class => "form-control", :placeholder => "Enter a contact link" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>