<div class="panel panel-default">
	<div class="panel-heading">
		<%= @contact.title %>		
	</div>
	<div class="panel-body">
		<div class="row">
    		<div class="col-xs-12 col-md-8"><p><%= @contact.link %></p></div>
    		<div class="col-xs-12 col-md-2">
    			<p>
    			<%= link_to 'Edit', edit_contact_path(@contact), :class => "btn btn-default btn-sm", :role => "button" %>
    			<%= link_to 'Remove', contact_path(@contact), :class => "btn btn-danger btn-sm", :role => "button", method: :delete, data: { confirm: 'Are you sure?' } %>
    			</p>
    		</div>
		</div>
	</div>
</div>
<%= link_to 'Back', contacts_path, :class => "btn btn-default btn-sm", :role => "button" %>