<%= form_for @experience, html: {role: "form"} do |f| %>
  <div class="form-group">
    <% if @experience.errors.any? %>
    <div class="alert alert-danger" role="alert" id="error_explanation">
      <%= pluralize(@experience.errors.count, "error") %> prohibited
        this experience from being saved:
      <ul>
      <% @experience.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :company, :class => "col-sm-2 control-label" %>
    <%= f.text_field :company, :class => "form-control", :placeholder => "Enter a company name" %>
  </div>
 
  <div class="form-group">
    <%= f.label :position, :class => "col-sm-2 control-label" %>
    <%= f.text_field :position, :class => "form-control", :placeholder => "Enter a position" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, :class => "col-sm-2 control-label" %>
    <%= f.text_field :start_date, :class => "form-control", :placeholder => "Enter a start date" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, :class => "col-sm-2 control-label" %>
    <%= f.text_field :end_date, :class => "form-control", :placeholder => "Enter an end date" %>
  </div>

  <div class="form-group">
    <%= f.label :city, :class => "col-sm-2 control-label" %>
    <%= f.text_field :city, :class => "form-control", :placeholder => "Enter a city" %>
  </div>

  <div class="form-group">
    <%= f.label :state, :class => "col-sm-2 control-label" %>
    <%= f.text_field :state, :class => "form-control", :placeholder => "Enter a state" %>
  </div>

  <div class="form-group">
    <%= f.label :summary, :class => "col-sm-2 control-label" %>
    <%= f.text_area :summary, :class => "form-control", :placeholder => "Enter a summary" %>
  </div>
 
  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>